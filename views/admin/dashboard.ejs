<!-- CSRF token lek√©r√©se (cookie-val, hibakezel√©ssel) -->
<script>
// Glob√°lis v√°ltoz√≥ a CSRF token t√°rol√°s√°ra
let csrfToken = '';

(async () => {
  try {
    const resp = await fetch('/api/csrf-token', {
      method: 'GET',
      credentials: 'same-origin',
      headers: { 'Accept': 'application/json' }
    });
    if (!resp.ok) throw new Error('CSRF fetch failed: ' + resp.status);
    const data = await resp.json();
    csrfToken = data.token || '';
    document.querySelectorAll('input[name="_csrf"]').forEach(input => {
      input.value = csrfToken;
    });
  } catch (err) {
    console.error('‚ùå CSRF token lek√©r√©si hiba:', err);
  }
})();

// Hero Box szerkeszt≈ë funkci√≥k
let currentHeroBoxData = {};

// Seg√©df√ºggv√©ny CSRF token lek√©r√©s√©hez
async function getCsrfToken() {
  if (!csrfToken) {
    try {
      const response = await fetch('/api/csrf-token');
      const data = await response.json();
      csrfToken = data.token;
    } catch (error) {
      console.error('CSRF token lek√©r√©si hiba:', error);
    }
  }
  return csrfToken;
}

// El≈ën√©zet friss√≠t√©se
function updatePreview() {
  document.getElementById('previewIcon').textContent = document.getElementById('heroBoxIcon').value || 'üèîÔ∏è';
  document.getElementById('previewTitle').textContent = document.getElementById('heroBoxTitle').value || 'Aktuelles Angebot';
  document.getElementById('previewDescription').textContent = document.getElementById('heroBoxDescription').value || 'Genie√üen Sie unseren speziellen Bergblick mit 3-G√§nge-Men√º';
  document.getElementById('previewButton').textContent = document.getElementById('heroBoxButtonText').value || 'Mehr erfahren';
  
  const endDate = document.getElementById('heroBoxEndDate').value;
  if (endDate) {
    const date = new Date(endDate);
    document.getElementById('previewDates').textContent = `G√ºltig bis: ${date.toLocaleDateString('de-DE')}`;
  } else {
    document.getElementById('previewDates').textContent = 'G√ºltig bis: 25.11.2025';
  }
}

// Form mez≈ëk v√°ltoz√°s√°nak figyel√©se
document.addEventListener('DOMContentLoaded', function() {
  const formFields = ['heroBoxIcon', 'heroBoxTitle', 'heroBoxDescription', 'heroBoxButtonText', 'heroBoxEndDate'];
  formFields.forEach(fieldId => {
    const field = document.getElementById(fieldId);
    if (field) {
      field.addEventListener('input', updatePreview);
    }
  });
});

async function openHeroBoxEditor() {
  try {
    const response = await fetch('/api/hero-box', {
      headers: { 'CSRF-Token': await getCsrfToken() }
    });
    if (!response.ok) throw new Error('Failed to load hero box data');
    currentHeroBoxData = await response.json();
    
    // Form kit√∂lt√©se
    document.getElementById('heroBoxEnabled').checked = currentHeroBoxData.enabled || false;
    document.getElementById('heroBoxIcon').value = currentHeroBoxData.icon || '';
    document.getElementById('heroBoxTitle').value = currentHeroBoxData.title || '';
    document.getElementById('heroBoxDescription').value = currentHeroBoxData.description || '';
    document.getElementById('heroBoxButtonText').value = currentHeroBoxData.buttonText || '';
    document.getElementById('heroBoxButtonLink').value = currentHeroBoxData.buttonLink || '';
    document.getElementById('heroBoxStartDate').value = currentHeroBoxData.startDate || '';
    document.getElementById('heroBoxEndDate').value = currentHeroBoxData.endDate || '';
    document.getElementById('heroBoxPriority').value = currentHeroBoxData.priority || 1;
    document.getElementById('heroBoxTargetAudience').value = currentHeroBoxData.targetAudience || 'all';
    document.getElementById('heroBoxIsActive').checked = currentHeroBoxData.isActive !== false;
    
    // El≈ën√©zet friss√≠t√©se
    updatePreview();
    
    // Modal megjelen√≠t√©se
    const modal = new bootstrap.Modal(document.getElementById('heroBoxModal'));
    modal.show();
  } catch (error) {
    console.error('Hiba a hero box bet√∂lt√©sekor:', error);
    alert('Hiba a hero box adatok bet√∂lt√©sekor.');
  }
}

async function saveHeroBox() {
  try {
    const formData = {
      enabled: document.getElementById('heroBoxEnabled').checked,
      icon: document.getElementById('heroBoxIcon').value,
      title: document.getElementById('heroBoxTitle').value,
      description: document.getElementById('heroBoxDescription').value,
      buttonText: document.getElementById('heroBoxButtonText').value,
      buttonLink: document.getElementById('heroBoxButtonLink').value,
      startDate: document.getElementById('heroBoxStartDate').value,
      endDate: document.getElementById('heroBoxEndDate').value,
      priority: parseInt(document.getElementById('heroBoxPriority').value),
      targetAudience: document.getElementById('heroBoxTargetAudience').value,
      isActive: document.getElementById('heroBoxIsActive').checked
    };

    // Valid√°ci√≥
    if (!formData.title.trim()) {
      alert('A c√≠m megad√°sa k√∂telez≈ë!');
      return;
    }

    if (!formData.description.trim()) {
      alert('A le√≠r√°s megad√°sa k√∂telez≈ë!');
      return;
    }

    const response = await fetch('/api/hero-box', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'CSRF-Token': await getCsrfToken()
      },
      body: JSON.stringify(formData)
    });

    if (!response.ok) throw new Error('Failed to save hero box data');

    const result = await response.json();
    
    if (result.ok) {
      const modal = bootstrap.Modal.getInstance(document.getElementById('heroBoxModal'));
      modal.hide();
      alert('Hero Box sikeresen mentve!');
    } else {
      alert('Hiba a ment√©s sor√°n: ' + (result.msg || 'Ismeretlen hiba'));
    }
  } catch (error) {
    console.error('Hiba a hero box ment√©sekor:', error);
    alert('Hiba a hero box ment√©sekor.');
  }
}
</script>