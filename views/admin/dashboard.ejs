<%- include('../partials/head', { 
  title: 'Admin-Dashboard – Feldiserhof',
  description: 'Administrationsbereich der Feldiserhof-Website'
}) %>

<%- include('../partials/navbar') %>

<main class="container py-5 mt-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
          <h1 class="h2 text-primary mb-0">
            <i class="fas fa-crown me-2"></i>
            <span id="dashboard-title">Admin-Dashboard</span>
          </h1>

          <!-- Nyelvválasztó teljesen kivéve, hogy ne legyen i18n hivatkozás -->
        </div>

        <form id="logoutForm" method="post" action="/admin/logout">
          <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
          <button class="btn btn-outline-danger" id="logout-button" type="submit">
            <i class="fas fa-sign-out-alt me-1"></i>
            <span id="logout-text">Abmelden</span>
          </button>
        </form>
      </div>

      <div class="alert alert-success d-flex align-items-center" id="welcome-alert" role="status" aria-live="polite">
        <i class="fas fa-check-circle me-2 fs-5"></i>
        <div>
          <span id="welcome-text">Erfolgreich angemeldet! Willkommen im Admin-Bereich.</span>
        </div>
      </div>

      <div class="row mt-4">
        <!-- Hero Box szerkesztése -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-primary h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary">
                <i class="fas fa-mountain me-2"></i>
                <span>Hero Box Kezelő</span>
              </h5>
              <p class="card-text flex-grow-1">
                A főoldali hero szekcióban megjelenő box tartalmának szerkesztése
              </p>
              <button class="btn btn-primary mt-auto" onclick="openHeroBoxEditor()">Szerkesztés</button>
            </div>
          </div>
        </div>

        <!-- Menü szerkesztése -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-primary h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary">
                <i class="fas fa-utensils me-2"></i>
                <span id="menu-editor-title">Speisekarte bearbeiten</span>
              </h5>
              <p class="card-text flex-grow-1" id="menu-editor-desc">
                Speisen, Getränke und Kategorien verwalten, Preise aktualisieren.
              </p>
              <a href="/admin/menu" class="btn btn-primary mt-auto" id="menu-editor-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Nyitvatartás kezelő gomb (egysoros) -->
        <div class="col-12 mb-4">
          <a href="/admin/opening-hours" class="btn btn-primary w-100">
            <i class="fas fa-clock me-2"></i> Öffnungszeiten verwalten
          </a>
        </div>

        <!-- Galéria kezelése -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-success h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-success">
                <i class="fas fa-image me-2"></i>
                <span id="gallery-title">Galerie verwalten</span>
              </h5>
              <p class="card-text flex-grow-1" id="gallery-desc">
                Bilder hochladen, sortieren und Kategorien verwalten.
              </p>
              <a href="/admin/gallery" class="btn btn-success mt-auto" id="gallery-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Foglalások -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-info h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-info">
                <i class="fas fa-calendar-alt me-2"></i>
                <span id="bookings-title">Buchungen</span>
              </h5>
              <p class="card-text flex-grow-1" id="bookings-desc">
                Buchungen verwalten, prüfen und Status ändern.
              </p>
              <a href="/admin/bookings" class="btn btn-info mt-auto" id="bookings-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Nyitvatartás -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-warning h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-warning">
                <i class="fas fa-clock me-2"></i>
                <span id="hours-title">Öffnungszeiten</span>
              </h5>
              <p class="card-text flex-grow-1" id="hours-desc">
                Öffnungszeiten anpassen und Feiertagsregelungen verwalten.
              </p>
              <a href="/admin/hours" class="btn btn-warning mt-auto" id="hours-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Alkalmazottak -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-secondary h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-secondary">
                <i class="fas fa-users me-2"></i>
                <span id="staff-title">Öffenen status</span>
              </h5>
              <p class="card-text flex-grow-1" id="staff-desc">
                Teammitglieder verwalten und Dienstpläne bearbeiten.
              </p>
              <a href="/admin/staff" class="btn btn-secondary mt-auto" id="staff-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Statisztikák -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-dark h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark">
                <i class="fas fa-chart-bar me-2"></i>
                <span id="analytics-title">Statistiken</span>
              </h5>
              <p class="card-text flex-grow-1" id="analytics-desc">
                Website-Traffic und weitere Statistiken einsehen.
              </p>
              <a href="/admin/analytics" class="btn btn-dark mt-auto" id="analytics-button">Öffnen</a>
            </div>
          </div>
        </div>

        <!-- Feature-Schalter (Mitarbeitende) -->
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card border-secondary h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-secondary">
                <i class="fas fa-toggle-on me-2"></i>
                <span>Feature-Schalter</span>
              </h5>
              <p class="card-text flex-grow-1">
                „Speisekarte – Buch öffnen" engedélyezése/tiltása.
              </p>

              <div class="mb-3">
                <% if (flags && flags.menuBookEnabled) { %>
                  <span id="flagBadge" class="badge bg-success">Könyv nyitása: engedélyezve</span>
                <% } else { %>
                  <span id="flagBadge" class="badge bg-secondary">Könyv nyitása: tiltva</span>
                <% } %>
              </div>

              <a href="/admin/mitarbeitende" class="btn btn-secondary mt-auto">
                <i class="fas fa-arrow-right me-1"></i> Megnyitás
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('./partials/hero-box-modal') %>
<link rel="stylesheet" href="/css/admin-dashboard.css">
<script src="/js/admin-dashboard.js"></script>
<%- include('../partials/footer') %>

