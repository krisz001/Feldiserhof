<!DOCTYPE html>
<html lang="de">
<head>
  <% 
    const PAGE_TITLE = (typeof title !== 'undefined' && title) 
      ? title 
      : 'Feldiserhof – Hotel & Restaurant';
    const PAGE_DESC = (typeof description !== 'undefined' && description) 
      ? description 
      : 'Hotel, Restaurant & Café Feldis – feine Küche, regionale Zutaten, kleine Wellness-Oase.';
    const v = Date.now(); // cache-buster fejlesztéshez
  %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= PAGE_TITLE %></title>
  <meta name="description" content="<%= PAGE_DESC %>">
  <meta name="robots" content="index, follow">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;700;900&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

  <!-- Vendor CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <!-- Saját CSS-ek (ABSZOLÚT utak + cache-buster) -->
  <link rel="stylesheet" href="/css/variables.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/base.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/navbar.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/buttons.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/sections.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/flipbook.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/gallery.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/reservieren.css?v=<%= v %>">
  <link rel="stylesheet" href="/css/custom.css?v=<%= v %>">
    <link rel="stylesheet" href="/css/wellness.css?v=<%= v %>">


  <!-- Fontos: ezek a pontos fájlnevek a public/css-ben -->
  <link rel="stylesheet" href="/css/menu-card.css?v=<%= v %>">  <!-- nem 'menu.css' -->
  <link rel="stylesheet" href="/css/admin-modal.css?v=<%= v %>">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
</head>
